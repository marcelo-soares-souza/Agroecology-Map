<% if usuario_signed_in? %>    
  <% if current_usuario.admin? %>
    <%= link_to "Registrar Novo Tema", new_tema_experiencia_agroecologica_path, :class => "btn btn-primary", :style => "float:right;" %>
    <br/><br/><br/>
    <% end %>
  <% end %>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:all), tema_experiencia_agroecologicas_path, :class => "nav-link active" %>
  </li>
</ul>

<% if @tema_experiencia_agroecologicas.empty? %>
  <br/>
  <h3>Nenhum Tema de Experiência Agroecológica Registrada</h3>
<% else %>

  <br/>
  <div style="overflow-x:auto;">
    <table id="dataTable-agroecologia" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>Nome</th>
          <% if usuario_signed_in? %><th class="list-control"></th><th class="list-control"></th><% end %>
        </tr>
      </thead>

      <tbody>
        <% @tema_experiencia_agroecologicas.each do |tema_experiencia_agroecologica| %>
        <tr>
          <td><%= link_to tema_experiencia_agroecologica.nome, tema_experiencia_agroecologica_path(tema_experiencia_agroecologica) %></td>
          <% if usuario_signed_in? %>
            <% if current_usuario.admin? %>
              <td><%= link_to t(:edit), edit_tema_experiencia_agroecologica_path(tema_experiencia_agroecologica), :class => 'btn btn-sm btn-success' %></td>
              <td><%= link_to t(:destroy), tema_experiencia_agroecologica_path(tema_experiencia_agroecologica), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-sm btn-danger' %></td>
            <% end %>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <script>$(document).ready(function(){ dataTables(); });</script>
<% end %>
