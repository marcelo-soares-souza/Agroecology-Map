<% if @locais %>
  var markers = L.markerClusterGroup({ disableClusteringAtZoom: 12, maxClusterRadius: 50 });
  var Icon = L.icon({
    iconUrl: '<%= image_url "leaflet/images/leaf-green.png" %>',
    shadowUrl: '<%= image_url "leaflet/images/leaf-shadow.png" %>',
    iconSize:     [38, 95],
    shadowSize:   [50, 64],
    iconAnchor:   [22, 94],
    shadowAnchor: [4, 62],
    popupAnchor:  [-3, -76]
  });

  <% @locais.each do |local| %>
    <% if local.latitude and local.longitude %>
      var popup = '<b><%= "#{link_to local.nome, local_path(local)}".html_safe %><br>';
          popup += '<%= "<br>#{t(:experiences_in_agroecology)}<br>".html_safe %>';
          popup += '<%= local.experiencia_agroecologicas.count > 0 ? "#{local.experiencia_agroecologicas.map {|experiencia| link_to truncate(experiencia.nome, length: 38), experiencia}.join("<br>") }<br>".html_safe : "#{t(:none_registered)}</br>".html_safe %>';
          popup += '<%= "<br>#{t(:agroforestry_systems)}<br>".html_safe %>';
          popup += '<%= local.safs.count > 0 ? "#{local.safs.map {|saf| link_to truncate(saf.nome, length: 38), saf}.join("<br>") }<br>".html_safe : "#{t(:none_registered)}</br>".html_safe %>';
          popup += '<%= "<br>#{t(:latest_blog_post)}<br>".html_safe %>';
          popup += '<%= local.blogs.count > 0 ? "#{local.blogs.order(updated_at: :desc).take(5).map {|blog| link_to truncate(blog.titulo, length: 32), local_blog_path(local, blog)}.join("<br>") }<br>".html_safe : "#{t(:none_registered)}</br>".html_safe %>';
          popup += '</b>';

      var marker = new L.marker(new L.latLng([<%= local.latitude %>, <%= local.longitude %>]), { icon: Icon, title: '<%= local.nome %>' });
      marker.bindPopup(popup);
      markers.addLayer(marker);
    <% end %>
  <% end %>

  map.addLayer(markers);
  map.addControl(new L.Control.Search({layer: markers, zoom: 15, textPlaceholder: "<%= t(:search_using_location_name) %>", autoCollapse: true }) );
  map.addControl(new L.Control.OSMGeocoder({ placeholder: '<%= t(:search_by_address) %>', text: '<%= t(:locate) %>', collapsed: true}));
  map.addControl(new L.control.polylineMeasure());
  map.addControl(new L.control.zoom({position: 'topright'}));
  L.control.locate().addTo(map);

<% end %>
