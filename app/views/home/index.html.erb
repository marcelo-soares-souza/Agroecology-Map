  <style>
    footer .container {
       width: 80%;
    }

    .container {
       width: 100%;
       padding-left: 0px;
       padding-right: 0px;
    }
  </style>

  <div id="map"></div>

  <script>
    lat = -15.77835833463309;
    lon = -47.88219451904297;

    // lat = -5.189952599271305;
    // lon = -22.200997684206428;

    var map = L.map('map', {fullscreenControl: true, zoomControl: false}).setView([lat, lon], 4);

    $( document ).ready(function() {

      $(window).on("resize", function () { $("#map").height($(window).height() - 80); map.invalidateSize(); }).trigger("resize");

      L.control.zoom({position:'topright'}).addTo(map);

      var osmGeocoder = new L.Control.OSMGeocoder({ placeholder: 'Buscar por Endereço (Logradouro, Cidade, Estado e/ou País)' });

      map.addControl(osmGeocoder);

      L.control.polylineMeasure().addTo(map);

    });

    $( window ).on('load', function() {
      // Base Maps
      var osm     = L.tileLayer('https://a.tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '<a href="https://codeberg.org/marcelo-soares-souza/agroecology-map" target="_blank"><%= I18n.t('site') %></a> | <a href="https://www.openstreetmap.org/" target="_blank">OpenStreetMap</a>', maxZoom: 18,}).addTo(map);
      var osmHot  = L.tileLayer('https://a.tile.openstreetmap.fr/hot/{z}/{x}/{y}.png', { attribution: '<a href="https://codeberg.org/marcelo-soares-souza/agroecology-map" target="_blank"><%= I18n.t('site') %></a> | <a href="https://www.hotosm.org/" target="_blank">HOT OpenStreetMap</a>', maxZoom: 18,});
      var osmCycl = L.tileLayer('https://a.tile-cyclosm.openstreetmap.fr/cyclosm/{z}/{x}/{y}.png', { attribution: '<a href="https://codeberg.org/marcelo-soares-souza/agroecology-map" target="_blank"><%= I18n.t('site') %></a> | <a href="https://cyclosm.org/" target="_blank">CyclOSM OpenStreetMap</a>', maxZoom: 18,});
      var mapbox  = L.tileLayer('https://api.mapbox.com/v4/mapbox.satellite/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFyY2Vsb3NvYXJlc3NvdXphIiwiYSI6ImNpZ2NpNXFmMzNvaDh3Ym0zeXM3aWN3Y2EifQ.1xOQgKK1MioUioN0B4DVog', { attribution: 'Mapa da Agroecologia | MapBox', maxZoom: 18,});

      var baseMaps = { "<a href='https://www.openstreetmap.org/' target='_blank'>OpenStreetMap</a>": osm,
                       "<a href='https://www.hotosm.org/' target='_blank'>Humanitarian OpenStreetMap</a>": osmHot,
                       "<a href='https://cyclosm.org/' target='_blank'>CyclOSM OpenStreetMap</a>": osmCycl,
                       "Satélite (MapBox)": mapbox };

      // OverLay Maps
      var ti = L.tileLayer.wms('https://funai.mapadaagroecologia.org/geoserver/ows?',        { layers: 'CMR-PUBLICO:lim_terra_indigena_a', format: 'image/png', transparent: true });
      var ar = L.tileLayer.wms('https://funai.mapadaagroecologia.org/geoserver/ows?',        { layers: 'CMR-PUBLICO:lim_assentamento_rural_a', format: 'image/png', transparent: true });
      var uc = L.tileLayer.wms('https://funai.mapadaagroecologia.org/geoserver/ows?',        { layers: 'CMR-PUBLICO:lim_unidade_conservacao_federal_a', format: 'image/png', transparent: true, opacity: 0.5 });
      var quilombos = L.tileLayer.wms('https://funai.mapadaagroecologia.org/geoserver/ows?', { layers: 'CMR-PUBLICO:lim_quilombolas_a', format: 'image/png', transparent: true, opacity: 0.5 });
      var biomas =  L.tileLayer.wms('https://funai.mapadaagroecologia.org/geoserver/ows?',   { layers: 'CMR-PUBLICO:veg_biomas_a', format: 'image/png', transparent: true, opacity: 0.3 }).addTo(map);
      consumoresponsavel = loadConsumoResponsavel();
      idec = loadIDEC();
      ppm = loadPPM();
      ofb = loadOFB();
      argentina = loadArgentina();
      foei = loadFOEI();

      ti.addTo(map);
      consumoresponsavel.addTo(map);
      idec.addTo(map);
      ppm.addTo(map);
      ofb.addTo(map);
      argentina.addTo(map);
      foei.setZIndex(101);
      foei.addTo(map);

      var overlayMaps = { "Biomas": biomas, "Terra Indígena": ti, 
                          "Assentamento Rural": ar, 
                          "Unidade de Conservação": uc, 
                          "Quilombos": quilombos, 
                          "<a href='https://www.foei.org/agroecology-map' target='_blank'>Friends of the Earth</a>": foei, 
                          "<a href='http://mapa.consumoresponsavel.org.br/' target='_blank'>Consumo Responsável</a>": consumoresponsavel, 
                          "<a href='https://feirasorganicas.org.br' target='_blank'>Feiras Orgânicas (IDEC)</a>": idec, 
                          "<a href='https://agroecologia.org.br/mapa-das-politicas-publicas-em-agroecologia/' target='_blank'>Politicas Públicas Municipais</a>": ppm, 
                          "<a href='https://openfoodbrasil.com.br/' target='_blank'>Open Food Brasil</a>": ofb, 
                          "<a href='https://www.google.com/maps/d/u/0/viewer?mid=1qcPTG-9x_g-zsua71YfQKafC659dPTcn&ll=-39.16374453710612%2C-61.01804353560858&z=4' target='_blank'>Arte. y Prod. de Alim. Argentinos</a>": argentina 
                        };

      L.control.layers(baseMaps, overlayMaps, { collapsed: true, position: 'bottomright'} ).addTo(map);

      <%= render 'locais', locais: @locais %>

    });
  </script>
