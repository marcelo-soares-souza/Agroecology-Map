<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:all), experiencia_agroecologicas_path, :class => "nav-link active" %>
  </li>
  <% if usuario_signed_in? %>
    <li class="nav-item">
      <%= link_to t(:new), new_experiencia_agroecologica_path, :class => "nav-link" %>
    </li>
  <% end %>
</ul>

<% if @experiencia_agroecologicas.empty? %>
  <br/>
  <h3>Nenhum Dado Encontrado</h3>
<% else %>
<div class="tab-content">
  <div class="tab-pane active"><br/>
    <table class="table table-sm table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tema</th>
          <th>Local</th>
          <% if usuario_signed_in? %><th></th><% end %>
        </tr>
      </thead>

      <tbody>
        <% @experiencia_agroecologicas.each do |experiencia_agroecologica| %>
        <tr>
          <td><%= link_to experiencia_agroecologica.nome, experiencia_agroecologica_path(experiencia_agroecologica) %></td>
          <td><%= experiencia_agroecologica.tema_experiencia_agroecologica.nome %></td>
          <td><%= link_to experiencia_agroecologica.local.nome, local_path(experiencia_agroecologica.local) %></td>
          <% if usuario_signed_in? %>
            <td>
              <% if current_usuario.admin? or experiencia_agroecologica.usuario.id == current_usuario.id %>
                <%= link_to t(:edit), edit_experiencia_agroecologica_path(experiencia_agroecologica), :class => 'btn btn-mini btn-success' %>
                <%= link_to t(:destroy), experiencia_agroecologica_path(experiencia_agroecologica), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-mini btn-danger' %>
              <% end %>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>
