<% title t(:forgot_password) %>
<div class="link-action"></div>

<ul class="nav nav-tabs flex-column flex-xl-row">
  <li class="nav-item">
      <%= link_to t(:login), new_account_session_path, :class => "nav-link active" %>
  </li>

  <li class="nav-item">
      <%= link_to t(:sign_up), new_account_registration_path, :class => "nav-link" %>
  </li>
</ul>

<div class="sign_in_up">
  <br>
  <strong><%= t(:forgot_password) %></strong>
  <div class="tip" style="text-align: center">Forgot your password? Enter your registered e-mail address.</div>
  <br>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="forms" style="padding-bottom: 10px">
      <div class="form-group col-xs-2 col-md-4 required bg-light">
        <%= f.label "E-Mail",  class: "col-form-label-lg control-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", :required => true %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t(:send_me_the_reset_instructions), class: "btn btn-primary" %>
    </div>
    <br>
    <%= render "devise/shared/links" %>
    <br>

  <% end %>
  <br>
</div>