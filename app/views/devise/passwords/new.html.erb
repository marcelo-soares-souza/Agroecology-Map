<% title t(:forgot_password) %>
<br>
<br>
<br>
<ul class="nav nav-tabs flex-column flex-xl-row">
  <li class="nav-item">
    <%= link_to t(:sign_in), new_usuario_session_path, :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to t(:sign_up), new_usuario_registration_path, :class => "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to t(:forgot_password), new_password_path(resource_name), :class => "nav-link active" %>
  </li>
</ul>
<br>
<div class="sign_in_up">
  <h2><%= t(:forgot_password) %></h2>
  <br>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group row">
      <%= f.label "E-Mail", class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>
    <br>
    <div class="actions">
      <%= f.submit t(:send_me_the_reset_instructions), class: "btn btn-primary" %>
    </div>
    <br>
    <%= render "devise/shared/links" %>
    <br>
  <% end %>
  <br>
</div>
