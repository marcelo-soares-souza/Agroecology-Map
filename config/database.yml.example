default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: <%= ENV['USERNAME_DB'] %>
  password: <%= ENV['PASSWORD_DB'] %>
  host: <%= ENV['HOST_DB'] %>
  port: <%= ENV['PORT_DB'] %>

development:
  <<: *default
  database: agroecologia_development

test:
  <<: *default
  database: agroecologia_test

production:
  <<: *default
  database: agroecologia_production
